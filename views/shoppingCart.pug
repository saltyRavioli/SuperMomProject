.wrap.cf
  .heading.cf
    h1 My Cart
    a.continue(href='/shop') Continue Shopping
  .cart
    //
      <ul class="tableHead">
      <li class="prodHeader">Product</li>
      <li>Quantity</li>
      <li>Total</li>
      <li>Remove</li>
      </ul>
    ul.cartWrap
    - var x = 0;
    - while (x<items.length) {
      - if (x%2!=0)
        li.items.odd
          .infoWrap
            .cartSection
              img.itemImg(src='http://lorempixel.com/output/technics-q-c-300-300-4.jpg', alt='')
              p.itemNumber= "#"+items[x].product_id
              h3= items[x].product_name
            .prodTotal.cartSection
              p= "$" + items[x].product_price
            .cartSection.removeWrap
              a.remove(href='deleteShoppingCart?id='+items[x].id) x
        -x++;
      - else 
        li.items.even
          .infoWrap
            .cartSection
              img.itemImg(src='http://lorempixel.com/output/technics-q-c-300-300-4.jpg', alt='')
              p.itemNumber= "#"+items[x].product_id
              h3= items[x].product_name
            .prodTotal.cartSection
              p= "$" + items[x].product_price
            .cartSection.removeWrap
              a.remove(href='deleteShoppingCart?id='+items[x].id) x
        -x++;
    - }
        .special
          .specialContent Free gift with purchase!, gift wrap, etc!!
  .promoCode
    label(for='promo') Have A Promo Code?
    input(type='text', name='promo', placholder='Enter Code')
    a.btn(href='#')
  .subtotal.cf
    ul(style='padding-bottom: 15px')
      li.totalRow
        span.label Subtotal
        span.value $35.00
      li.totalRow
        span.label Shipping
        span.value $5.00
      li.totalRow
        span.label Tax
        span.value $4.00
      li.totalRow.final
        span.label Total
        span.value $44.00
      li.checkout
        a.btn.continue(href='#')
          | Checkout with 
          i.fa.fa-weixin(aria-hidden='true')
      li.checkout
        a.btn.continue(href='#') Checkout with ETransfer
