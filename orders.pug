<div>


table
    thead
        tr
            th ID
            th Name
            th Description
            th Price
            th Category
            
    each item in items
        tr
            td= item.product_id
            td= item.product_name 
            td= item.product_description 
            td= "$"+item.product_price
            td= item.category
            

</div>

<html>
    <body>
        <form action="http://localhost:8080/addToOrder" method="POST">
        <br> Add Product to Cart: <input type="text" name="productID" id="productID"><br>
        </form>
        <form action="http://localhost:8080/searchProducts" method="POST">
            select(name='category', id='category')
                each item in categories
                    option= item.topic_name
            <button type="submit" id="submitButton">Submit</button>
        </form>
        td= price
    <body>
</html>

